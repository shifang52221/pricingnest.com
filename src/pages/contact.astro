---
import BaseLayout from "../layouts/BaseLayout.astro";

const contactEmail = import.meta.env.PUBLIC_CONTACT_EMAIL ?? "admin@pricingnest.com";
---
<BaseLayout title="Contact | SaaS Pricing Toolkit" description="Contact information for this website." robots="noindex,follow">
  <section class="hero">
    <h1>Contact</h1>
    <p class="muted">
      Email: <a href={`mailto:${contactEmail}`}>{contactEmail}</a>
    </p>
  </section>
</BaseLayout>
