---
import BaseLayout from "../../layouts/BaseLayout.astro";

const siteName = import.meta.env.PUBLIC_SITE_NAME ?? "PricingNest";

const terms = [
  { href: "/glossary/mrr/", title: "MRR (Monthly Recurring Revenue)", description: "What MRR is, how to compute it, and common pitfalls." },
  { href: "/glossary/arr/", title: "ARR (Annual Recurring Revenue)", description: "When ARR is useful and how it differs from annualized revenue." },
  { href: "/glossary/gross-margin/", title: "Gross Margin", description: "How to think about gross margin targets for SaaS and usage products." },
  { href: "/glossary/cogs/", title: "COGS (Cost of Goods Sold)", description: "What belongs in SaaS COGS and what doesnâ€™t." },
  { href: "/glossary/churn/", title: "Churn (Customer & Revenue)", description: "Logo churn vs revenue churn and why both matter." },
  { href: "/glossary/arpa/", title: "ARPA / ARPU", description: "Average revenue per account (or user) and how to use it in LTV." },
  { href: "/glossary/ltv/", title: "LTV (Customer Lifetime Value)", description: "LTV formulas, assumptions, and common modeling mistakes." },
  { href: "/glossary/cac/", title: "CAC (Customer Acquisition Cost)", description: "How to estimate CAC and what to include." },
  { href: "/glossary/cac-payback/", title: "CAC Payback Period", description: "How long it takes to recover CAC from gross profit." },
  { href: "/glossary/unit-economics/", title: "Unit Economics", description: "Contribution margin, payback, and the core SaaS unit model." },
  { href: "/glossary/usage-based-pricing/", title: "Usage-Based Pricing", description: "Units, tiers, minimums, and designing for predictable bills." },
  { href: "/glossary/seat-based-pricing/", title: "Seat-Based Pricing", description: "When seats work, when they break, and hybrid approaches." },
  { href: "/glossary/annual-prepay-discount/", title: "Annual Prepay Discount", description: "Choosing a discount that balances cash flow and churn risk." },
] as const;
---
<BaseLayout title={`Glossary | ${siteName}`} description="Short definitions for the key SaaS pricing and unit economics terms used in the toolkit.">
  <section class="hero">
    <h1>Glossary</h1>
    <p>Quick definitions and links to the calculators and guides where each term shows up in practice.</p>
  </section>

  <div class="grid">
    <section class="card col8">
      <h2>Terms</h2>
      <div class="tools" style="margin-top: 0.9rem;">
        {terms.map((t) => (
          <a class="tool" href={t.href}>
            <strong>{t.title}</strong>
            <span>{t.description}</span>
          </a>
        ))}
      </div>
    </section>

    <aside class="card col4">
      <h2>Use the tools</h2>
      <ul class="list">
        <li><a href="/saas-pricing/">All calculators</a></li>
        <li><a href="/guides/">Guides</a></li>
        <li><a href="/saas-pricing/use-cases/">Use cases</a></li>
      </ul>
    </aside>
  </div>
</BaseLayout>

